@page
@model ReviewsBook_RazorPages.Pages.LoginModel
@{
    ViewData["Title"] = "Авторизація";
    // @HttpContext.Session.Se
}
<h1>Увійти</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" id="loginform-login-error-span"></div>
            <div class="form-group">
                <label asp-for="LoginVM.Login" class="control-label"></label>
                <input asp-for="LoginVM.Login" class="form-control" required />
                <span asp-validation-for="LoginVM.Login" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LoginVM.Password" class="control-label"></label>
                <input asp-for="LoginVM.Password" type="password" class="form-control" required />
                <span asp-validation-for="LoginVM.Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Увійти" class="btn btn-primary" id="loginform-submit" />
            </div>
        </form>
    </div>
    <div>
        <a asp-page="./Register" class="btn btn-dark" id="ref-register" name="ref-register" style="margin:20px 0 0 0">Реєстрація</a>
    </div>
    <br />
    <div>
        <a asp-page="./Index" class="btn btn-dark" id="ref-index" name="ref-index" style="margin:20px 0 0 0">Увійти як гість</a>
    </div>
</div>