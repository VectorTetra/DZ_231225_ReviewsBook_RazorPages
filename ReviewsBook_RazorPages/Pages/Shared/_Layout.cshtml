<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reviews_RazorPages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MyStyle.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a asp-page="./Index" class="navbar-brand" id="ref-index" name="ref-index">Відгуки</a>
                <a asp-page="./Register" class="navbar-brand unloginedRefs" id="ref-register" name="ref-register">Реєстрація</a>
                <a asp-page="./Login" class="navbar-brand unloginedRefs" id="ref-login" name="ref-login">Увійти</a>

                <span id="label-fullname" name="label-fullname"  style="display:none;" class="loginedRefs"></span>
                <span id="label-nickname" name="label-nickname" style="display:none;" class="loginedRefs"></span>
                <span id="label-userid" name="label-userid" style="display:none;" ></span>
                <a asp-page="./Index" asp-page-handler="Logout" class="navbar-brand loginedRefs" id="ref-logout" name="ref-logout" style="display:none;">Вийти</a>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Reviews_RazorPages;
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>