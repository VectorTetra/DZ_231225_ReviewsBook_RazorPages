@page
@model ReviewsBook_RazorPages.Pages.RegisterModel
@{
    ViewData["Title"] = "Реєстрація";
}
    <h1>Реєстрація</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" id="registerform-reg-error-span"></div>
                <div class="form-group">
                    <label asp-for="RegisterVM.FirstName" class="control-label"></label>
                    <input asp-for="RegisterVM.FirstName" class="form-control" id="registerform-firstname" required />
                    <span asp-validation-for="RegisterVM.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterVM.LastName" class="control-label"></label>
                    <input asp-for="RegisterVM.LastName" class="form-control" id="registerform-lastname" required />
                    <span asp-validation-for="RegisterVM.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterVM.Login" class="control-label"></label>
                    <input asp-for="RegisterVM.Login" class="form-control" id="registerform-login" required />
                    <span asp-validation-for="RegisterVM.Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterVM.Password" class="control-label"></label>
                    <input asp-for="RegisterVM.Password" type="password" class="form-control" id="registerform-password" required />
                    <span asp-validation-for="RegisterVM.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for ="RegisterVM.PasswordConfirm" class="control-label"></label>
                    <input asp-for ="RegisterVM.PasswordConfirm" type="password" class="form-control" id="registerform-passwordconfirm" required />
                    <span asp-validation-for="RegisterVM.PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Зареєструватися" class="btn btn-primary" id="registerform-submit" />
                </div>
            </form>
        </div>
    </div>
